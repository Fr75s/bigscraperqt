{
    "app-id": "io.github.fr75s.bigscraperqt",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "base": "com.riverbankcomputing.PyQt.BaseApp",
    "base-version": "5.15-21.08",
    "command": "io.github.fr75s.bigscraperqt",
    "build-options": {
        "env": {
            "BASEAPP_REMOVE_WEBENGINE": "1"
        }
    },
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=all"
    ],
    "modules": [
        "python3-requirements.json",
        {
            "name": "bigscraperqt",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share",
                "cp -r share /app/",
                "pip3 install --verbose --no-index --prefix=${FLATPAK_DEST} --no-build-isolation --no-deps ."
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Fr75s/bigscraperqt/archive/refs/tags/v1.1.0.tar.gz",
                    "sha256": "e060778b5a686b41974d2d35725a5ff85c8681c45bd6da0865129bcf96446697"
                }
            ],
            "modules": [
                {
                    "name": "ffmpeg",
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://ffmpeg.org/releases/ffmpeg-5.0.tar.gz",
                            "sha256": "7bf52bc242b5db8df67c62cb826df134d917dedcf6abf1289e15e4057bcc1750"
                        }
                    ]
                }
            ]
        },
        {
            "name": "bigscraperqt-desktop",
            "buildsystem": "simple",
            "build-commands": [
                "install -D ./bsqt.sh /app/bin/io.github.fr75s.bigscraperqt"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "bsqt.sh"
                }
            ]
        }
    ]
}
